{
  "compilerOptions": {
    "target": "es2016",                   /* 设置编译后输出的 JavaScript 版本 */
    "module": "commonjs",                 /* 使用 CommonJS 模块系统 */
    "strict": true,                       /* 启用所有严格类型检查选项 */
    "esModuleInterop": true,              /* 允许对 CommonJS 和 ES 模块进行互操作 */
    "forceConsistentCasingInFileNames": true, /* 文件名大小写检查 */
    "skipLibCheck": true,                 /* 跳过所有声明文件的类型检查 */
    "outDir": "./dist"                    /* 指定编译输出目录 */
  },
  "include": ["src"]                      /* 指定包含的文件目录 */
}
